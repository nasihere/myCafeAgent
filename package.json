{
  "name": "cafe-agent",
  "version": "6.1.0",
  "description": "Connected Cafe Agent",
  "author": {
    "name": "Nasir Sayed",
    "email": "nasihere@gmail.com"
  },
  "keywords": [
    "electron"
  ],
  "main": "indexnasir.js",
  "private": true,
  "scripts": {
    "clean": "rm -rf out ",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "package:win": "electron-packager ./ 'cafeagent' --platform=win32 --arch=x64",
    "build": "rm -rf out && rm out.zip && npm run package:win && ng build --configuration=production; git add .; git commit -nm 'Release Branch'; git push"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "core-js": "3.1.4",
    "electron": "^6.1.12",
    "electron-packager": "^15.4.0"
  },
  "engines": {
    "node": ">=10.9.0"
  },
  "dependencies": {
    "electron-localshortcut": "^3.2.1",
    "electron-squirrel-startup": "^1.0.0",
    "yarn": "^1.22.17"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "baseline_public_white_24dp.ico",
        "name": "CafeAgent"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "authors": "CafeAgent",
            "name": "cafe-agent",
            "setupIcon": "baseline_public_white_24dp.ico"
          }
        }
      ]
    }
  }
}
